{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"monorepo": true,

	"projects": {
		"sample1": {
			"type": "application",
			"entryFile": "main",
			"root": "sample1",
			"sourceRoot": "sample1/src",
			"compilerOptions": {
			  "tsConfigPath": "sample1/tsconfig.test.json"
			}
		},
		"sample2": {
			"type": "application",
			"entryFile": "main",
			"root": "sample2",
			"sourceRoot": "sample2/src",
			"compilerOptions": {
			  "tsConfigPath": "sample2/tsconfig.test.json"
			}
		},
		"sample3": {
			"type": "application",
			"entryFile": "main",
			"root": "sample3",
			"sourceRoot": "sample3/src",
			"compilerOptions": {
			  "tsConfigPath": "sample3/tsconfig.test.json"
			}
		}
	},

	"compilerOptions": {
		"webpack": true,
		"deleteOutDir": true
	}
}
