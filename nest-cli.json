{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"monorepo": true,

	"sourceRoot": "samples/sample1/src",
	"entryFile": "main",

	"projects": {
		"sample1": {
			"type": "application",
			"entryFile": "main",
			"root": "samples/sample1",
			"sourceRoot": "samples/sample1/src",
			"compilerOptions": {
			  "tsConfigPath": "samples/sample1/tsconfig.test.json"
			}
		},
		"sample2": {
			"type": "application",
			"entryFile": "main",
			"root": "samples/sample2",
			"sourceRoot": "samples/sample2/src",
			"compilerOptions": {
			  "tsConfigPath": "samples/sample2/tsconfig.test.json"
			}
		}
	},

	"compilerOptions": {
		"webpack": false,
		"deleteOutDir": true
	}
}
